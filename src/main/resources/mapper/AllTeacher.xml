<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alex.demo.springtest.mapper.AllTeacherMapper">
    <select id="getAllTeacher" resultMap="g_t">
        select c.class_id,t.teacher_id,t.teacher_name
        from contect_ct c,teacher t
        where c.teacher_id = t.teacher_id
        and c.class_id = #{classId}
    </select>

    <resultMap id="g_t" type="com.alex.demo.springtest.entity.Ct">
        <result property="class_id" column="classId"/>
            <result property="teacher_id" column="teacherId"/>

            <collection property="teachers" ofType="com.alex.demo.springtest.entity.Teacher">
                <id property="teacher_id" column="teacherId"/>
                <result property="teacher_name" column="teacherName"/>
            </collection>
    </resultMap>

</mapper>